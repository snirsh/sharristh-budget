{
  "name": "sharristh-family-budget",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@sfam/web",
    "dev:web:demo": "pnpm --filter @sfam/web dev:demo",
    "dev:mobile": "turbo dev --filter=@sfam/mobile",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "turbo test",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:seed": "turbo db:seed",
    "db:studio": "pnpm --filter @sfam/db db:studio",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "prepare": "husky",
    "knip": "knip",
    "knip:fix": "knip --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.57.0",
    "@rolldown/binding-darwin-arm64": "1.0.0-beta.58",
    "@sfam/config": "workspace:*",
    "@sparticuz/chromium": "^143.0.0",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251231.1",
    "husky": "^9.1.7",
    "knip": "^5.41.1",
    "lint-staged": "^16.2.7",
    "puppeteer-core": "^24.34.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": ["biome check --write --no-errors-on-unmatched"]
  }
}
