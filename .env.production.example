# Environment variables for Oracle Cloud deployment
# Copy this file to .env on the Oracle Cloud VM and fill in the values

# Authentication Secret (generate with: openssl rand -base64 32)
AUTH_SECRET=your-generated-secret-here-must-be-32-chars-min

# WebAuthn Configuration (update after setting up Cloudflare Tunnel)
AUTH_WEBAUTHN_RP_ID=budget.yourdomain.com
AUTH_WEBAUTHN_RP_NAME=Sharristh Budget
AUTH_WEBAUTHN_RP_ORIGIN=https://budget.yourdomain.com

# Cloudflare Tunnel Token (get from Cloudflare dashboard)
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# Optional: AI Categorization (disable for now)
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b

# Optional: Demo Mode (should be false for production)
DEMO_MODE=false
